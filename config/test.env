# Test/Staging Environment Configuration
# Similar to local but with production-like settings and full sample data

# Django Settings
DJANGO_SECRET_KEY=test-secret-key-change-me-in-real-test-env
DJANGO_DEBUG=1
DJANGO_ENVIRONMENT=test

# Database Configuration (SQLite with full sample data)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=data/db_test.sqlite3
DATABASE_HOST=
DATABASE_PORT=
DATABASE_USER=
DATABASE_PASSWORD=

# Server Configuration
ALLOWED_HOSTS=checkin.taylaibui.vn,localhost,127.0.0.1,0.0.0.0
SERVER_PORT=8000

# Site Configuration
SITE_ID=1
LANGUAGE_CODE=vi
TIME_ZONE=Asia/Ho_Chi_Minh

# Static Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Email Configuration (console for testing)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=

# Google OAuth (test credentials)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Security Settings (HTTPS for test domain)
SECURE_SSL_REDIRECT=1
SECURE_HSTS_SECONDS=3600
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=0
SECURE_CONTENT_TYPE_NOSNIFF=1
SECURE_BROWSER_XSS_FILTER=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1

# Logging Level
LOG_LEVEL=INFO

# Test-specific settings
CREATE_SAMPLE_DATA=1
SAMPLE_DATA_SIZE=large
